{% extends 'base.html.twig' %}

{% block title %}Edit Student{% endblock %}

{% block body %}
    <h1>Edit Student</h1>

    {{ form_start(form) }}

    {{ form_row(form.name) }}
    {{ form_row(form.email) }}
    {{ form_row(form.age) }}

    <button type="submit" class="btn btn-primary">Save Changes</button>

    {{ form_end(form) }}
    <a href="{{ path('app_student') }}" class="btn btn-secondary">Back to Student List</a>
{% endblock %}
